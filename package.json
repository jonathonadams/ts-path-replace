{
  "name": "@uqt/ts-path-replace",
  "version": "0.0.5",
  "description": "CLI Tool to replace TypeScript \"@alias\" paths to relative paths",
  "main": "dist/index.js",
  "bin": {
    "tspr": "bin/tspr"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unquenchablethyrst/ts-path-replace"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "cli",
    "TypeScript",
    "path",
    "replace",
    "alias",
    "rewrite"
  ],
  "author": "Jonathon Adams",
  "license": "MIT",
  "scripts": {
    "commit": "npx git-cz",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "preexample:build": "rimraf example/out",
    "example:build": "tsc --build example/apps/app1/tsconfig.json example/apps/app2/tsconfig.json",
    "example:tspr": "node bin/tspr --tsConfig example/apps/app1/tsconfig.json --references true && node example/test.js",
    "example:run": "node example/out/apps/app1/index.js && node example/out/apps/app2/index.js",
    "example:test": "npm run example:build && npm run example:tspr && npm run example:run",
    "lint": "tslint --project tsconfig.json",
    "test": "jest --coverage",
    "validate": "npm run lint && npm run test && npm run example:test",
    "prepare": "npm run build && npm run validate",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "glob": "^7.1.4",
    "lodash.merge": "^4.6.2",
    "minimist": "^1.2.3",
    "node-watch": "^0.6.3",
    "replace-in-file": "^4.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.18",
    "@types/lodash.merge": "^4.6.6",
    "@types/minimist": "^1.2.0",
    "@types/node": "^12.7.2",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.13.24",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
