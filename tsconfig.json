{
  "forceConsistentCasingInFileNames": true,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "lib": ["es2018"]
  },
  "exclude": ["node_modules", "dist", "example", "**/*.spec.ts"]
}
